<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>AdminLTE 3 | Dashboard 2</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="../plugins/fontawesome-free/css/all.min.css" />
  <!-- overlayScrollbars -->
  <link rel="stylesheet" href="../plugins/overlayScrollbars/css/OverlayScrollbars.min.css" />
  <!-- Theme style -->
  <link rel="stylesheet" href="../dist/css/adminlte.min.css" />
</head>

<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
  <div class="wrapper">
    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
      <img class="animation__wobble" src="/images/admin.png" alt="AdminLTELogo" height="60" width="60" />
    </div>

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-dark">
      <%- include('header') %>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <%- include('sidebar') %>
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="background-color: aliceblue; color: black">
      <% for (let s of product) { %>
        <form action="/updateD/<%= s.id  %>" method="POST" enctype="multipart/form-data"
          class="col-12 border border-dark p-3 m-auto" style="margin-top: 10px">
          <h3 class="text-center" style="font-weight: bold">SỬA SẢN PHẨM</h3>
          <div class="form-group">
            <label class="" for="tenSP">Tên sản phẩm</label>
            <input class="form-control" name="tenSP" id="tenSP" value="<%= s.tenSP %>" />
          </div>
          <div class="form-group">
            <label class="" for="gia">Giá sản phẩm</label>
            <input class="form-control" name="gia" value="<%= s.gia %>" id="gia" />

            <div class="form-group">
              <label class="" for="gia">Giá cũ</label>
              <input class="form-control" name="giaCu" value="<%= s.giaCu %>" id="giaCu" />


            </div>
            <div class="form-group">
              <label class="" for="moTa">Mô tả</label>
              <textarea rows="5" class="form-control" name="moTa" id="moTa">
     <%= s.moTa %></textarea>
            </div>
            <div class="form-group">
              <label class="" for="urlHinh">Hình sản phẩm</label>
              <input type="file" class="form-control" name="urlHinh" id="urlHinh" value="<%= s.urlHinh %>" />
              <img src="../images/<%= s.urlHinh %>" width="100" height="100" alt="" />
            </div>
            <div class="form-group mt-3">
              <center>
                <button type="submit" class="btn btn-dark py-2 px-4">
                  SỬA SẢN PHẨM
                </button>
              </center>
            </div>
        </form>
        <% } %>
    </div>
    <!-- /.content-wrapper -->

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-light">
      <!-- Control sidebar content goes here -->
    </aside>

    <!-- /.control-sidebar -->

    <!-- Main Footer -->
    <footer class="main-footer"></footer>
  </div>
</body>

</html>